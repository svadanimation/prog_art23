class FileIO_UI():
    WINDOW_NAME = 'File.io Window'
    def __init__ (self,text=None):
        self.text = text
        
        self.remove()
        self.window = mc.window(self.WINDOW_NAME, widthHeight =(600,600))
        self.layout = mc.columnLayout(columnAttach=('both, 5')
                                rowSpacing =10,
                                   columnWidth=250)
        self.update_text_scroll_feild = mc.button(label='Bruce',command =self.print_text)
        self.text_scroll_feild = mc.scrollField(editable=True
                                                wordWrap=True
                                                text=Default????



        self.show()

        def update_scroll_field(self, _):
            
            
            print(f'This is what you wrote: \n\n {self.text}')

        def show(self)
        if mc.window(self.WINDOW_NAME, query = True, exists = True):
            mc.showWindow(self.WINDOW_NAME)

        def remove(self)
            if mc.window(self.WINDOW_NAME,query = True, exists = True):
                mc.deleteUI(self.WINDOW_NAME)

